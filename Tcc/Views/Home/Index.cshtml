@model Mvc5Project.Models.RegisterViewModel
@using Mvc5Project.Controllers
@using Mvc5Project.Models
@{
    ViewBag.Title = "Home Page";
}

<div class="modal" id="modalLogin">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Login de usuário</h4>
            </div>
            <div class="modal-body">
                @Html.Partial("_Login", new LoginViewModel { })
            </div>

        </div>
    </div>
</div>
<div class="col-lg-7"  style="padding-top: 50px;">
    <div class="jumbotron">
        <h1>XXXXXX</h1>
        <p class="lead">XXXXXXXXXXXXXXXXXX XXXXXXXXXXXX XXXXXX.</p>
        <p><a href="#" class="btn btn-primary btn-lg">XXXXXX &raquo;</a></p>
    </div>


   


</div>

<div class="col-lg-5"  style="padding-top: 50px;">
    <div class="jumbotron">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Crie sua conta</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" , placeholder = "Nome" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.RegisterUsername, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.RegisterUsername, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.RegisterEmail, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.RegisterEmail, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.RegisterPassword, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.PasswordFor(m => m.RegisterPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BirthDate, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control" })
                </div>
            </div>
            {
                ViewBag.Country = AccountController.GetCountries();
            }
            <div class="form-group">
                @Html.LabelFor(m => m.Country, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.DropDownListFor(model => model.Country, (IEnumerable<SelectListItem>)ViewBag.Country, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-8 col-lg-10">
                    <input type="submit" class="btn btn-default" value="Registrar" />
                </div>
            </div>
        }
    </div>
</div>