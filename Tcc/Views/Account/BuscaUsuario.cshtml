@model IEnumerable<Model.tb_projetoUsuarioFuncao>  
<table id="tabela_participantes" class="table table-striped table-hover ">
    <thead>
        <tr>
            <th></th>
            <th>Membro</th>
            <th></th>
            <th>Função</th>
        </tr>

    </thead>
    @{
        int i = 0;
    }
@foreach (var tb_projetoUsuarioFuncao in Model)
{
        <tr>
            <th>
                <input id="tb_projetoUsuarioFuncao[@i].id_usuario" name="tb_projetoUsuarioFuncao[@i].id_usuario" type="hidden" value="@tb_projetoUsuarioFuncao.id_usuario"> 
            </th>            
            <th>@tb_projetoUsuarioFuncao.username</th>
            <th>
                <input id="tb_projetoUsuarioFuncao[@i].id_funcaoProjeto" name="tb_projetoUsuarioFuncao[@i].id_funcaoProjeto" type="hidden" value="@tb_projetoUsuarioFuncao.id_funcaoProjeto">

            </th>
            <th>@tb_projetoUsuarioFuncao.funcao</th>          
        </tr>
    i++;
}
</table>
